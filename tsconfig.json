{
    "files": [
        "src/main.umd.ts",
        "src/main.esm.ts"
    ],
    "compilerOptions": {
        "noImplicitAny": true,
        "target": "ES2020",
        "outDir": "output/",
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": false,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}